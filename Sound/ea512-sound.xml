<!--Battery Switch, Cabincall, no smoking sign, seatbelt sign; code from 777, audio produced with audactiy-->
	<chime>
		<name>battery</name>
		<mode>once</mode>
		<type>avionics</type>
		<path>cabincall.wav</path>
		<condition>
		            <property>/controls/electric/battery-switch</property>
		</condition>
            <position>
                <x>-12</x>
                <y>0</y>
                <z>-0.5</z>
            </position>
	</chime>
	<chime>
		<name>nosmoking</name>
		<mode>once</mode>
		<type>avionics</type>
		<path>cabincall.wav</path>
		<condition>
			<and>
		            <property>/controls/electric/battery-switch</property>
				<or>
					<equals>
    	    	        <property>instrumentation/boardcomm/nosmoking</property>
						<value>1</value>
					</equals>
					<equals>
    	    	        <property>instrumentation/boardcomm/nosmoking</property>
						<value>0</value>
					</equals>
				</or>
			</and>
		</condition>
	</chime>	   
   
	<chime>
		<name>seatbelt</name>
		<mode>once</mode>
		<type>avionics</type>
		<path>cabincall.wav</path>
		<condition>
			<and>
		            <property>/controls/electric/battery-switch</property>
				<or>
					<equals>
    	    	        <property>instrumentation/boardcomm/seatbelts</property>
						<value>1</value>
					</equals>
					<equals>
    	    	        <property>instrumentation/boardcomm/seatbelts</property>
						<value>0</value>
					</equals>
				</or>
			</and>
		</condition>
	</chime>   
   
	<chime>
		<name>cabincall</name>
		<mode>once</mode>
		<type>avionics</type>
		<path>cabincall.wav</path>
		<condition>
			<and>
		            <property>/controls/electric/battery-switch</property>
					<equals>
    	    	        <property>instrumentation/boardcomm/cabincall</property>
						<value>1</value>
					</equals>
			</and>
		</condition>
	</chime>

<!--The sound of the fuel cell inside the body-->
        <engine>
            <name>fuelcell</name>
            <reference-dist>3.0</reference-dist>
            <max-dist>20.0</max-dist>
            <mode>looped</mode>
            <path>Sounds/fan.wav</path>
            <condition>
                <property>engines/engine[0]/running</property>
            </condition>
            <volume>
                <property>sim/sound/E_volume</property>
                <factor>0.2</factor>
            </volume>
            <position>
                <x>1.02384</x>
                <y>0.0</y>
                <z>-0.66406</z>
            </position>
        </engine>
		   
