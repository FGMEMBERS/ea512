<animation>
  <type>pick</type>
  <object-name>AP</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>  
      <binding>
        <command>property-cycle</command>
        <property>/autopilot/locks/passive-mode</property>
  <value type="string">0</value>
  <value type="string">1</value>
      </binding>
    </action>
  </animation>
<animation>
  <type>translate</type>
  <object-name>AP</object-name>
<property>/autopilot/locks/passive-mode</property>
<factor>0.001</factor>
<axis><x>0.5</x>
<z>0.5</z></axis>
  </animation>
<animation>
  <type>pick</type>
  <object-name>ALT</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>  
      <binding>
        <command>property-cycle</command>
        <property>/autopilot/locks/altitude</property>
  <value type="string"></value>
  <value type="string">altitude-hold</value>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>/autopilot/locks/altitude-button</property>
      </binding>
    </action>
  </animation>
<animation>
  <type>translate</type>
  <object-name>ALT</object-name>
        <property>/autopilot/locks/altitude-button</property>
<factor>-0.001</factor>
<axis><x>0.5</x>
<z>0.5</z></axis>
  </animation>
