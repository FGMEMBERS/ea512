<PropertyList>
<path>ap.ac</path>
  
  <animation>
    <type>material</type>
    <object-name>AP</object-name>
    <object-name>ALT</object-name>
    <object-name>GS</object-name>
    <object-name>HDG</object-name>
    <object-name>VOR</object-name>
    <object-name>base</object-name>
    <condition>
<and>
      <property>/controls/electric/battery-switch</property>
<property>/controls/lighting/instrument-lights</property>
</and>
    </condition>
    <emission>
      <red>   0.8 </red>
      <green> 0.8 </green>
      <blue>  0.8 </blue>
    </emission>
  </animation>
<animation>
  <type>material</type>
  <object-name>APlight</object-name>
<condition><not>
        <property>/autopilot/locks/passive-mode</property></not>
</condition>
  <diffuse>
   <red>1</red>
   <green>1</green>
   <blue>1</blue>
  </diffuse>
  <ambient>
   <red>1</red>
   <green>1</green>
   <blue>1</blue>
  </ambient>
<emission>	
  <red>1</red>	
  <green>0</green>	
  <blue>0</blue>
 </emission>
 </animation>
<animation>
  <type>material</type>
  <object-name>ALTlight</object-name>
<condition><and><not>
        <property>/autopilot/locks/passive-mode</property></not>
<property>/autopilot/locks/altitude-button</property>
</and></condition>
