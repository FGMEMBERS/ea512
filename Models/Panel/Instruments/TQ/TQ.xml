<PropertyList>
<path>TQ.ac</path>
 <animation>
  <type>material</type>
  <object-name>throttleL</object-name>
  <object-name>throttleR</object-name>
  <object-name>flapslever</object-name>
<condition>
      <property>/controls/electric/battery-switch</property>
    </condition>
  <emission>
   <red>0.0001</red>
   <green>0.0001</green>
   <blue>0.00009</blue>
	<factor-prop>/controls/lighting/flood-light</factor-prop>
  </emission>
 </animation>
<!--Light reverser lights when thrust reverse is active-->
<animation>
  <type>material</type>
  <object-name>reverserL</object-name>
<condition>
        <property>/controls/engines/engine[0]/reverser</property>
</condition>
  <diffuse>
   <red>1</red>
   <green>1</green>
   <blue>1</blue>
  </diffuse>
  <ambient>
   <red>1</red>
   <green>1</green>
   <blue>1</blue>
  </ambient>
<emission>	
  <red>1</red>	
  <green>0</green>	
  <blue>0</blue>
 </emission>
 </animation>
<animation>
  <type>material</type>
  <object-name>reverserL</object-name>
<condition><not>
        <property>/controls/engines/engine[0]/reverser</property></not>
</condition>
  <diffuse>
   <red>1</red>
   <green>1</green>
   <blue>1</blue>
  </diffuse>
  <ambient>
   <red>1</red>
   <green>1</green>
   <blue>1</blue>
  </ambient>
<emission>	
  <red>0</red>	
  <green>1</green>	
  <blue>0</blue>
 </emission>
 </animation>
<animation>
  <type>material</type>
  <object-name>reverserR</object-name>
<condition>
        <property>/controls/engines/engine[1]/reverser</property>
</condition>
  <diffuse>
   <red>1</red>
   <green>1</green>
   <blue>1</blue>
  </diffuse>
  <ambient>
   <red>1</red>
   <green>1</green>
   <blue>1</blue>
  </ambient>
<emission>	
  <red>1</red>	
  <green>0</green>	
  <blue>0</blue>
 </emission>
 </animation>
<animation>
  <type>material</type>
  <object-name>reverserR</object-name>
<condition><not>
        <property>/controls/engines/engine[1]/reverser</property></not>
</condition>
  <diffuse>
   <red>1</red>
   <green>1</green>
   <blue>1</blue>
  </diffuse>
  <ambient>
   <red>1</red>
