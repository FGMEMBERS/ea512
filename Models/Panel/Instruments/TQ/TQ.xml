<!--Throttle forward motion-->
<animation>
  <type>rotate</type>
  <object-name>throttleL</object-name>
        <property>controls/engines/engine[0]/throttle-fwd</property>
<factor>-90</factor>
<center>
<x-m>0.0</x-m>
<z-m>0.0</z-m>
</center>
<axis><y>1</y></axis>
  </animation>
<animation>
  <type>rotate</type>
  <object-name>throttleR</object-name>
        <property>controls/engines/engine[1]/throttle-fwd</property>
<factor>-90</factor>
<center>
<x-m>0.0</x-m>
<z-m>0.0</z-m>
</center>
<axis><y>1</y></axis>
  </animation>
<!--Throttle has to be pulled up a little for thrust reverse-->
<animation>
  <type>translate</type>
  <object-name>throttleL</object-name>
        <property>controls/engines/engine[0]/reverser</property>
<factor>0.01</factor>
<axis><x>1</x><z>1</z></axis>
  </animation>
<animation>
  <type>translate</type>
  <object-name>throttleR</object-name>
        <property>controls/engines/engine[1]/reverser</property>
<factor>0.01</factor>
<axis><x>1</x><z>1</z></axis>
  </animation>
<!--Throttle backwards motion-->
<animation>
  <type>translate</type>
  <object-name>throttleL</object-name>
<condition>
        <property>controls/engines/engine[0]/reverser</property>
</condition>
        <property>controls/engines/engine[0]/throttle</property>
<factor>0.03</factor>
<axis><x>1</x></axis>
  </animation>
<animation>
  <type>rotate</type>
  <object-name>throttleL</object-name>
<condition>
        <property>controls/engines/engine[0]/reverser</property>
</condition>
        <property>controls/engines/engine[0]/throttle</property>
<factor>20</factor>
<center>
<x-m>0.0</x-m>
<z-m>0.0</z-m>
</center>
<axis><y>1</y></axis>
  </animation>
<animation>
  <type>translate</type>
  <object-name>throttleR</object-name>
<condition>
        <property>controls/engines/engine[1]/reverser</property>
</condition>
        <property>controls/engines/engine[1]/throttle</property>
<factor>0.03</factor>
<axis><x>1</x></axis>
  </animation>
<animation>
  <type>rotate</type>
  <object-name>throttleR</object-name>
<condition>
        <property>controls/engines/engine[1]/reverser</property>
</condition>
        <property>controls/engines/engine[1]/throttle</property>
<factor>20</factor>
<center>
<x-m>0.0</x-m>
<z-m>0.0</z-m>
</center>
<axis><y>1</y></axis>
  </animation>
  <!--Flaps lever-->
<animation>
<type>rotate</type>
<object-name>flapslever</object-name>
<property>/controls/flight/flaps</property>
        <interpolation>
            <entry>
                <ind>0.0</ind><dep>0.0</dep>
            </entry>
            <entry>
                <ind>0.2</ind><dep>60</dep>
            </entry>
            <entry>
                <ind>0.5</ind><dep>110</dep>
            </entry>
            <entry>
                <ind>1.0</ind><dep>130</dep>
            </entry>
        </interpolation>
<axis><y>1</y></axis>
<center>
<x-m>-0.0</x-m>
<z-m>0.0</z-m>
</center>
</animation>
